---
const { title } = Astro.props;
---

<style>
  .collapsible {
    background-color: #161223;
    justify-content: space-between;
    border-radius: 15px;
    align-items: center;
    color: white;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    margin-bottom: -20px;
    margin-left: 0px;
  }
  .collapsible.active {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    border-bottom: 1px solid #28203F;
  }
  .wrapper {
    height: 0;
    overflow: hidden;
    transition: all 0.3s ease-out;
    background-color: #161223;
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px;
  }
  .inner-content {
    padding: 18px;
  }
  .carr {
    flex-shrink: 0;
    flex-grow: 0;
    width: 15px;
    height: 15px;
    transition: transform 0.3s;
  }
  .collapsible.active .carr {
    transform: rotate(180deg);
  }
/* Span being used for linebreaks in <p> */
  span {
    display: inline;
  }
  span:before {
    content: "\a ";
    white-space: pre;
  }
</style>

<button class="collapsible">
  {title}
  <svg class="carr" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="250" height="250" viewBox="0 0 250 250">
    <image x="57" y="75" width="136" height="99" xlink:href="data:img/png;base64,"/>
  </svg>
</button>
<div class="wrapper">
  <div class="inner-content">
    <slot />
  </div>
</div>

<script>
  document.querySelectorAll(".collapsible").forEach(collapsible => {
    collapsible.addEventListener("click", function() {
      this.classList.toggle("active");
      const content = this.nextElementSibling;
      if (content.style.height) {
        content.style.height = null;
      } else {
        content.style.height = `${content.scrollHeight}px`;
      }
    });
  });
</script>